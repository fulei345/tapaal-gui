            description="Uninstall TAPAAL"
            iconFile="$INSTALL_PATH\Path\to\MyApplication\Icons\start.ico"
            iconIndex="0"
            desktop="no"
            applications="yes"
            startMenu="yes"
            startup="no">
        </shortcut>

    </shortcuts>

